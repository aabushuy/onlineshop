@model CatalogItemModel
@{
	var buttonText = Model != null && Model.IsCreation ? "Create" : "Update";
}
<div class="row">
	<div class="col-md-6">
		<section>
			<form id="team" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-floating">
					<input asp-for="Name" class="form-control" autocomplete="name" aria-required="true" />
					<label asp-for="Name" class="form-label"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<select class="form-control" asp-for="CategoryId" asp-items="@Model.Categories"></select>
					<label asp-for="CategoryId" class="form-label"></label>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>
				
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@buttonText</button>
				</div>
			</form>
		</section>
	</div>
</div>