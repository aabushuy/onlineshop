@model ProductDetailsModel
@{
	ViewData["Title"] = Model.Name;
}
<section style="background-color: #eee;">
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-10 col-lg-10 col-xl-8">
				
				<div class="card mb-3">
					<div class="row g-0">
						<div class="col-md-4">
							<img src="~/images/drag_default.jpg" class="img-fluid rounded-start" alt="@Model.Name">
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<div class="text-center">
									<h3 class="card-title mb-4">@Model.Name</h3>
								</div>
								<div>
									<div class="d-flex justify-content-between">
										<span>Manufacturer</span><span>@Model.Manufacturer</span>
									</div>

									<div class="d-flex justify-content-between">
										<span>Quantity in stock</span><span>@Model.StockQuantity</span>
									</div>
									<div class="d-flex justify-content-between">
										<span>Price</span><span>$@Model.PricePerUnit</span>
									</div>
								</div>
								<div class="d-flex justify-content-between total font-weight-bold mt-4">
									<span><b>Total</b></span><span><b>$0.0</b></span>
								</div>
								<div>
									<p class="text-muted mt-4">@Model.Description</p>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>